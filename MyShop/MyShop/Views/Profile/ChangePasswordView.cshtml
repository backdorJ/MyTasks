@model ChangePasswordViewModel

@{
	Layout = "_Layout";
}
<div class="container">
	<div class="row justify-content-center" style="max-width: 600px">
		<div class="align-content-center">
			@if (ViewBag.IsSucceed == true)
            		{
            			<div class="alert alert-success" role="alert">
            				Password has been successfully updated!
            			</div>
            		}
            		<form method="post">
            			<div asp-validation-summary="All"></div>
            			<div class="form-group">
            				<label class="text-white" asp-for="CurrentPassword"></label>
            				<input asp-for="CurrentPassword" class="form-control">
            				<span class="text-danger" asp-validation-for="CurrentPassword"></span>
            			</div>
            			<div class="form-group">
            				<label class="text-white" asp-for="NewPassword"></label>
            				<input asp-for="NewPassword" class="form-control">
            				<span class="text-danger" asp-validation-for="NewPassword"></span>
            			</div>
            			<div class="form-group">
            				<label class="text-white" asp-for="ConfirmNewPassword"></label>
            				<input asp-for="ConfirmNewPassword" class="form-control">
            				<span class="text-danger" asp-validation-for="ConfirmNewPassword"></span>
            			</div>
	                    <button type="submit" class="btn btn-success my-2">Save</button>
	                    <a class="btn btn-primary" asp-action="ViewProfile" asp-controller="Profile">Back</a>
            		</form>
		</div>
	</div>
</div>