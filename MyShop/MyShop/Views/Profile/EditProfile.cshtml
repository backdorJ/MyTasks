@model EditViewModel

<div class="container">
	<div class="row">
		<div class="col-5">
			@if (ViewBag.IsSucceed == true)
			{
				<div class="alert alert-success" role="alert">
					Success!
				</div>
			}
			<div class="form-edit">
				<form method="post" enctype="multipart/form-data">
					<div asp-validation-summary="All"></div>
					<div class="form-group">
						<label asp-for="Username" class="text-white"></label>
						<input asp-for="Username" class="form-control">
					</div>
					<div class="form-group">
						<input class="form-check-input text-white" asp-for="Gender" name="Gender" type="radio" value="Male">
						<label class="form-check-label text-white"><span class="bi bi-gender-male"></span> Male</label>
						<input class="form-check-input text-white" asp-for="Gender" name="Gender" type="radio" value="Female">
						<label class="form-check-label text-white"><span class="bi bi-gender-female"></span> Female</label>
					</div>
					<div class="form-group">
						<label class="text-white" asp-for="Photo"></label>
						<input asp-for="Photo" type="file">
					</div>
					<div class="form-group">
						<button class="btn btn-success" type="submit">Save</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>